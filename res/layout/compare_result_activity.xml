<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res/com.qijitek.blphace"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test_background" >

    <RelativeLayout
        android:id="@+id/rell1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:onClick="onClick"
            android:scaleType="centerInside"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="产品对比"
            android:textColor="#393939"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#dcdee4" />

        <ImageView
            android:id="@+id/state_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="19dp"
            android:background="@drawable/ic_launcher_black" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rell1"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp" >

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img1"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="雅诗兰黛"
                    android:textColor="#393939"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp" >

                <TextView
                    android:id="@+id/name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img2"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="悦诗风吟"
                    android:textColor="#393939"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="VS" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="15dp" >

            <com.qijitek.view.RoundProgressBar
                android:id="@+id/water_progress1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="44dp"
                android:visibility="invisible"
                android_custom:roundColor="#f2eded"
                android_custom:roundProgressColor="#8dcdb9"
                android_custom:roundWidth="7dip"
                android_custom:textColor="#a1a1a1"
                android_custom:textSize="15dp" />

            <com.qijitek.view.RoundProgressBar
                android:id="@+id/water_progress2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="44dp"
                android:visibility="invisible"
                android_custom:roundColor="#f2eded"
                android_custom:roundProgressColor="#8dcdb9"
                android_custom:roundWidth="7dip"
                android_custom:textColor="#a1a1a1"
                android_custom:textSize="15dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/face_water_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/imageView1"
                    android:layout_marginTop="5dp"
                    android:text="水分"
                    android:textColor="#393939"
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp" >

            <TextView
                android:id="@+id/p1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="44dp"
                android:gravity="center"
                android:text="正在连接..."
                android:textColor="#393939"
                android:textSize="12sp" />

            <com.qijitek.view.RoundProgressBar
                android:id="@+id/oil_progress1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="44dp"
                android:visibility="invisible"
                android_custom:roundColor="#f2eded"
                android_custom:roundProgressColor="#8dcdb9"
                android_custom:roundWidth="7dip"
                android_custom:textColor="#a1a1a1"
                android_custom:textSize="15dp" />

            <com.qijitek.view.RoundProgressBar
                android:id="@+id/oil_progress2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="44dp"
                android:visibility="invisible"
                android_custom:roundColor="#f2eded"
                android_custom:roundProgressColor="#8dcdb9"
                android_custom:roundWidth="7dip"
                android_custom:textColor="#a1a1a1"
                android_custom:textSize="15dp" />

            <TextView
                android:id="@+id/p2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="44dp"
                android:gravity="center"
                android:text="等待测试"
                android:textColor="#393939"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/face_oil_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/imageView2"
                    android:layout_marginTop="5dp"
                    android:text="油分"
                    android:textColor="#393939"
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp" >

            <com.qijitek.view.RoundProgressBar
                android:id="@+id/light_progress1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="44dp"
                android:visibility="invisible"
                android_custom:roundColor="#f2eded"
                android_custom:roundProgressColor="#8dcdb9"
                android_custom:roundWidth="7dip"
                android_custom:textColor="#a1a1a1"
                android_custom:textSize="15dp" />

            <com.qijitek.view.RoundProgressBar
                android:id="@+id/light_progress2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="44dp"
                android:visibility="invisible"
                android_custom:roundColor="#f2eded"
                android_custom:roundProgressColor="#8dcdb9"
                android_custom:roundWidth="7dip"
                android_custom:textColor="#a1a1a1"
                android_custom:textSize="15dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/skin_color_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/imageView3"
                    android:layout_marginTop="5dp"
                    android:text="肤色"
                    android:textColor="#393939"
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/single_result_btn"
        android:onClick="onClick"
        android:text="保存并退出"
        android:textColor="#393939"
        android:textSize="12sp" />

</RelativeLayout>